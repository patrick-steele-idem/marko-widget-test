.modal
  // Z-Index
  z-index: -1
  visibility: hidden

  > .modal-mask
    // Display
    position: fixed

    // Position
    top: 0
    right: 0
    bottom: 0
    left: 0

    visibility: hidden
    opacity: 0
    background-color: #000

    // Animation
    transition: opacity 300ms ease-out, visibility 300ms ease-out

  > .modal-container
    // Display
    position: fixed
    visibility: none

    // Position
    top: 48%
    left: 50%
    transform: translateX(-50%) translateY(-50%)

    // Background
    background-color: $lightest-grey

    // Border
    border-radius: rem-calc(3px)
    border-top: 5px solid $yellow

    // Opacity
    opacity: 0

    // Animation
    transition: opacity 200ms ease-out, top 200ms ease-out

    // Z-Index
    z-index: 4444

    // Under 600px
    @media screen and (max-width: $modal-width)
      width: 100% !important

  .modal-body
    // Padding
    padding: rem-calc(30px)

  .close-modal
    // Position
    position: absolute
    right: 10px
    top: -5px

    // Display
    display: flex

    // Width
    width: rem-calc(30px)
    height: rem-calc(30px)

    // Flex
    justify-content: flex-end
    align-self: flex-end

    // Rotate
    transform: rotate(45deg);

    // Font
    font-size: rem-calc(30px)
    font-weight: 700
    color: $grey

    // Cursor
    cursor: pointer

.modal.visible
  visibility: visible
  z-index: 4343

  > .modal-mask
    // Visibility
    visibility: visible
    opacity: 0.7
    z-index: 4343

  > .modal-container
    // Position
    visibility: visible
    top: 50%
    opacity: 1


